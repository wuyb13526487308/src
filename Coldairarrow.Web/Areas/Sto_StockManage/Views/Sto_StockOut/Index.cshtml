@{
    Layout = "~/Views/Shared/_Layout_List.cshtml";
}
@section toolbar{
    <a id="add_pro" class="easyui-linkbutton" data-options="iconCls:'icon-add'">工程领料</a>
    <a id="add" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加</a>
    <a id="edit" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改</a>
    <a id="delete" class="easyui-linkbutton" data-options="iconCls:'icon-remove'">删除</a>
}
@section search{
    <div class="search_wrapper">
        <div class="search_item">
            <label class="search_label">查询类别</label>
            <select name="condition" class="easyui-combobox" data-options="width:100">
                <option value="">请选择</option>

                <option value="OutNo">出库单号</option>
                <option value="OutOperID">操作员</option>
                <option value="Context">备注</option>
                <option value="ApplyNo">申请单号</option>
                <option value="StoreId">仓库编号</option>
            </select>
            <input name="keyword" class="easyui-textbox" style="width:150px" />
        </div>
        <div class="search_submit">
            <a href="javascript:;" class="easyui-linkbutton" data-options="iconCls:'icon-search'" onclick="searchGrid(this,'#dataTable')">查询</a>
        </div>
    </div>
}
<div id="dataTable">
</div>
<script>
    var rootUrl = '@Url.Content("~/")';
    var formWidth = 800;
    var formHeight = 570;

    function initTable() {
        $('#dataTable').datagrid({
            url: rootUrl + 'Sto_StockManage/Sto_StockOut/GetDataList',
            method: 'POST',
            //queryParams: { 'id': id },
            idField: 'Id',
            fit: true,
            fitColumns: true,
            singleSelect: false,
            selectOnCheck: false,
            checkOnSelect: false,
            //rownumbers: true,
            pagination: true,
            pageSize: 30,
            nowrap: false,
            pageList: [10, 20, 30, 50, 100, 150, 200],
            //showFooter: true,
            columns: [[
                { title: 'ck', field: 'ck', checkbox: true },

                { title: '出库单号', field: 'OutNo', width: 200 },
                { title: '出库时间', field: 'OutDate', width: 200 },
                { title: '出库操作员', field: 'OutOperID', width: 100 },
                { title: '审核人', field: 'Auditor', width: 100 },
                {
                    title: '出库类型', field: 'OutType', width: 100, formatter: function (value, row) {
                        var mapping = {

                            '0': '工程领料',
                            '1': '',
                            '2': ''
                        };
                        return mapping[value];
                    }
                },
                { title: '申请编号', field: 'ApplyNo', width: 200 },
                { title: '备注', field: 'Context', width: 200 },
                { title: '仓库', field: 'StoreId', width: 200 },
                {
                    title: '操作', field: '_', width: 150, fixed: true, formatter: function (value, row) {
                        var html = '<a href="javascript:;" onclick="showData(\'{0}\')">查看</a>'.format(row['Id']);
                        return html;
                    }
                }
            ]],
            onBeforeLoad: function (param) {

            },
            onBeforeSelect: function () {
                return false;
            }
        });
    }

    function showData(id) {
        dialogOpen({
            id: 'form',
            title: '出库单记录',
            width: formWidth,
            height: formHeight,
            url: rootUrl + 'Sto_StockManage/Sto_StockOut/FormShow?id=' + id,
        });
    }


    $(function () {
        initTable();

        $('#add_pro').click(function () {
            dialogOpen({
                id: 'form',
                title: '工程领料',
                width: formWidth,
                height: formHeight,
                url: rootUrl + 'Sto_StockManage/Sto_StockOut/FormPro',
            });
        });

        //添加数据
        $('#add').click(function () {
            dialogOpen({
                id: 'form',
                title: '添加数据',
                width: formWidth,
                height: formHeight,
                url: rootUrl + 'Sto_StockManage/Sto_StockOut/Form',
            });
        });

        //修改数据
        $('#edit').click(function () {
            var selected = $("#dataTable").datagrid("getChecked");
            if (!selected || !selected.length || selected.length > 1) {
                dialogError('请选择一条记录修改!');
                return;
            }
            var id = selected[0].Id;

            dialogOpen({
                id: 'form',
                title: '修改数据',
                width: formWidth,
                height: formHeight,
                url: rootUrl + 'Sto_StockManage/Sto_StockOut/Form?id=' + id,
            });
        });

        //删除数据
        $('#delete').click(function () {
            var checked = $("#dataTable").datagrid("getChecked");
            if (!checked || !checked.length) {
                dialogError('请选择要删除的记录!');
                return;
            }
            var ids = $.map(checked, function (item) {
                return item['Id'];
            });

            dialogComfirm('确认删除吗？', function () {
                $.postJSON(rootUrl + 'Sto_StockManage/Sto_StockOut/DeleteData', { ids: JSON.stringify(ids) }, function (resJson) {
                    if (resJson.Success) {
                        $('#dataTable').datagrid('clearSelections').datagrid('clearChecked');
                        $('#dataTable').datagrid('reload');
                        dialogMsg('删除成功!');
                    }
                    else {
                        dialogError(resJson.Msg);
                    }
                });
            });
        });
    });
</script>