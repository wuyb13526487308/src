@Html.DevExpress().GridView(
    settings =>
    {
        settings.Name = "gvPreview";
        settings.CallbackRouteValues = new { Controller = "GridView", Action = "PreviewPartial" };
        settings.Width = Unit.Percentage(100);

        settings.Columns.Add("FirstName");
        settings.Columns.Add("Title");
        settings.Columns.Add("LastName");
        settings.Columns.Add("BirthDate").PropertiesEdit.DisplayFormatString = "d";
        settings.Columns.Add("HireDate").PropertiesEdit.DisplayFormatString = "d";

        settings.SettingsPager.PageSize = 5;
        settings.Settings.ShowPreview = true;
        settings.PreviewFieldName = "Notes";
    }).Bind(Model).GetHtml()