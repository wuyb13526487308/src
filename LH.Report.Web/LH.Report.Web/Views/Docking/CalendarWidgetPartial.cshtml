@Html.DevExpress().Calendar(
    settings => {
        settings.Name = "calendar";
        settings.Properties.ShowClearButton = false;
        settings.Properties.ShowHeader = false;
        settings.Properties.ShowTodayButton = false;
        settings.Properties.ShowWeekNumbers = false;
        settings.Properties.HighlightToday = false;
        settings.ControlStyle.Border.BorderStyle = BorderStyle.None;
        settings.Width = Unit.Parse("100%");
        settings.PreRender = (sender, e) => {
            MVCxCalendar calendar = (MVCxCalendar)sender;
            calendar.SelectedDate = new DateTime(DateTime.Now.Year, 3, 14);
        };
    }
).GetHtml()