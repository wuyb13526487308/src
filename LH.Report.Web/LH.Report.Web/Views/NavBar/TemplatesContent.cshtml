@{
    var xmlElement = (((NavBarGroup)Model).DataItem as IHierarchyData).Item as System.Xml.XmlElement;   
}
<table cellpadding="0" cellspacing="0" border="0" style="width: 100%; height: 110px;">
    <tr>
        <td valign="top">
            <a href="@Url.Content(xmlElement.Attributes["NavigateUrl"].Value)" target="_blank" onclick="return DXDemo.ShowScreenshotWindow(event, this);">
                <img alt="" src="@Url.Content(xmlElement.Attributes["ImageUrl"].Value)" border="0" />
            </a>
        </td>
        <td valign="top"><div class="spacer" style="width: 10px;"></div></td>
        <td valign="top" style="width: 100%;">@Html.Raw(xmlElement.InnerXml)</td>
    </tr>
</table>